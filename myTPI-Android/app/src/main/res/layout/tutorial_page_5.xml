<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Adding Images"
        android:id="@+id/textView157"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_marginTop="20dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView11"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView157"
        android:src="@drawable/tutorial_images"
        android:layout_above="@+id/textView162" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="UpTo 4 images can be attached to the final certificate."
        android:id="@+id/textView162"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="#fff"
        android:textAlignment="center" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView162"
        android:layout_alignParentBottom="true"
        android:padding="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="false"
            android:id="@+id/fieldRow"
            android:layout_above="@+id/dropdownRow">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Adding Images :"
                android:id="@+id/textView163"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:textColor="#fff"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Select the desired image from your library. Must be done individually."
                android:id="@+id/textView164"
                android:layout_below="@+id/textView163"
                android:layout_centerHorizontal="true"
                android:textAlignment="textStart"
                android:textColor="#fff"
                android:layout_marginTop="5dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="false"
            android:layout_centerInParent="true"
            android:id="@+id/dropdownRow"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Removing Images :"
                android:id="@+id/textView165"
                android:textColor="#fff"
                android:layout_below="@+id/textView164"
                android:layout_alignStart="@+id/textView164"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Simply long press on the image link to remove."
                android:id="@+id/textView166"
                android:textAlignment="textStart"
                android:textColor="#fff"
                android:layout_below="@+id/textView165"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:id="@+id/savingRow"
            android:layout_below="@+id/dropdownRow">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Image Sizes :"
                android:id="@+id/textView167"
                android:textColor="#fff"
                android:textStyle="bold"
                android:layout_below="@+id/textView166"
                android:layout_alignStart="@+id/textView166" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="It is recommended that you use small image files to keep the final PDF size small."
                android:id="@+id/textView168"
                android:textAlignment="textStart"
                android:textColor="#fff"
                android:layout_below="@+id/textView167"
                android:layout_alignStart="@+id/textView167"
                android:layout_marginTop="5dp" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>