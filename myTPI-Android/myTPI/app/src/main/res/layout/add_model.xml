<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Add a MEWP Model"
        android:id="@+id/textView125"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_marginBottom="15dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addModelField"
        android:layout_below="@+id/textView125"
        android:layout_centerHorizontal="true"
        android:capitalize="words"
        android:hint="Model Number" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addMakeField"
        android:layout_below="@+id/addModelField"
        android:layout_centerHorizontal="true"
        android:hint="Manufacturer"
        android:capitalize="words" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addSWLField"
        android:hint="SWL (eg. 227 kg)"
        android:layout_below="@+id/addDescField"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addWHField"
        android:hint="Working Height (eg. 12.14 mtrs)"
        android:layout_below="@+id/addSWLField"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addPHField"
        android:hint="Platform Height (eg. 10.14 mtrs)"
        android:layout_below="@+id/addWHField"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addReachField"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/addPHField"
        android:layout_centerHorizontal="true"
        android:hint="Reach (eg. 11.32 mtrs)" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addPersonsField"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/addReachField"
        android:layout_centerHorizontal="true"
        android:hint="No. of Persons (eg. 2 Persons only)" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addDescField"
        android:layout_below="@+id/addMakeField"
        android:layout_alignParentStart="true"
        android:hint="Description"
        android:capitalize="words" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add"
        android:id="@+id/addModelButton"
        android:textColor="#fff"
        android:background="@color/colorPrimaryDark"
        android:layout_below="@+id/addPersonsField"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />
</RelativeLayout>