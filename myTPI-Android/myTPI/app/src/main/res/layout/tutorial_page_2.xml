<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:padding="16dp">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Add Inspection"
        android:id="@+id/textView152"
        android:layout_marginTop="20dp"
        android:textColor="#fff"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Adding a new inspection is done in three simple steps :"
        android:id="@+id/textView153"
        android:textColor="#fff"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="center" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView6"
        android:src="@drawable/tutorial_plus"
        android:layout_below="@+id/textView152"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/textView153" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView153"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="1. Press + to toggle Add Dialog."
            android:id="@+id/textView154"
            android:textColor="#fff"
            android:textAlignment="center"
            android:layout_above="@+id/textView155"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="2. Complete the required fields."
            android:id="@+id/textView155"
            android:textColor="#fff"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:layout_centerInParent="true"
            android:layout_marginBottom="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="3. Add the Inspection."
            android:id="@+id/textView156"
            android:textColor="#fff"
            android:textAlignment="center"
            android:layout_below="@+id/textView155"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
</RelativeLayout>